<script>
  class ErrorPage extends HTMLElement {
    constructor() {
      super()
    }

    connectedCallback() {
      const message = "An error happened"
      this.innerHTML = `
        <div class="mycelium h-screen">
          <div class="container mx-auto p-8 text-xl">
            <h1 class="text-5xl">oops!</h1>
            <p class="my-2">Sorry, an unexpected error has occurred.</p>
            <blockquote class="border-l-2 border-white pl-3 mt-6">
              ${message}
            </blockquote>
          </div>
        </div>
        `
    }
  }
  customElements.define("wc-error-page", ErrorPage)
</script>
